{
  "name": "imap",
  "friendly_name": "IMAP Plugin",
  "description": "Raingull IMAP Plugin for receiving emails. Serves as a template for incoming plugins.",
  "version": "0.1",
  "incoming": true,
  "outgoing": false,
  "config_fields": [
    {"name": "imap_server", "type": "string", "label": "IMAP Server URL", "required": true},
    {"name": "imap_port", "type": "integer", "label": "IMAP Server Port", "default": 993, "required": true},
    {"name": "encryption", "type": "select", "label": "Encryption Type", "options": ["SSL/TLS", "STARTTLS", "None"], "default": "SSL/TLS", "required": true},
    {"name": "username", "type": "string", "label": "IMAP Username", "required": true},
    {"name": "password", "type": "password", "label": "IMAP Password", "required": true},
    {"name": "inbox_folder", "type": "string", "label": "Inbox Folder", "default": "INBOX", "required": true},
    {"name": "processed_folder", "type": "string", "label": "Processed Folder", "default": "Processed", "required": true}
  ],
  "message_schemas": {
    "incoming": {
      "raingull_id": {"type": "UUIDField", "required": true},
      "source_message_id": {"type": "CharField", "max_length": 255, "required": true},
      "subject": {"type": "CharField", "max_length": 255, "required": true},
      "sender": {"type": "CharField", "max_length": 255, "required": true},
      "recipients": {"type": "JSONField", "required": true},
      "date": {"type": "CharField", "max_length": 255, "required": true},
      "body": {"type": "TextField", "required": true},
      "headers": {"type": "JSONField", "required": false},
      "status": {"type": "CharField", "max_length": 20, "required": true, "default": "new"},
      "processed_at": {"type": "DateTimeField", "required": false}
    }
  },
  "translation_rules": {
    "sender": "sender",
    "recipients": "recipients",
    "subject": "subject",
    "body": "body"
  }
}
